{% extends 'base.html.twig' %}

{% block title %}Liste des Utilisateurs{% endblock %}

{% block body %}
<div class="container">
    <h1>Liste des Utilisateur {{ app.user }}</h1>
    <a href="{{ path('app_register') }}" class="btn btn-success">Ajouter</a>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>username</th>
                <th>tel</th>
                <th>email</th>
                <th>Province</th>
                <th>Région</th>
                <th>District</th>
                <th>Commune</th>
            </tr>
        </thead>
        <tbody>
        {% for user in user %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.tel }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.commune.district.region.province }}</td>
                <td>{{ user.commune.district.region }}</td>
                <td>{{ user.commune.district }}</td>
                <td>{{ user.commune }}</td>




            </tr>
        {% else %}
            <tr>
                <td colspan="5">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
