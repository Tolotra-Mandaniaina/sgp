{% extends 'base.html.twig' %}

{% block title %}New UserSimple{% endblock %}

{% block body %}
    <div class="container">
        <h1>Create a New Person</h1>

        {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.prenom, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.province, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.region, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.district, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.commune, {'attr': {'class': 'form-control'}}) }}
        </div>

        {{ form_end(form) }}

        <a href="{{ path('app_user_simple_index') }}" class="btn btn-secondary mt-3">Back to List</a>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/user.js') }}"></script>
{% endblock %}
